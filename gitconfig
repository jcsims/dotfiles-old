# Sample gitconfig
#
# You probably want to change the [user] section here since you are not me.

[hub]
  protocol = ssh
[user]
  name = Chris Sims
  email = chris@jcsi.ms
[alias]
  co = checkout
  count   = shortlog -sn
  standup = log --pretty=format:'%Cred%h%Creset - %C(yellow)%ae%Creset - %Cgreen%cd%Creset - %s%Creset' --abbrev-commit --date=local --author chris@jcsi.ms --since yesterday
  timelog = log --pretty=format:'%Cred%h%Creset - %C(yellow)%ae%Creset - %Cgreen%cd%Creset - %s%Creset' --abbrev-commit --date=local
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1
[credential]
  helper = osxkeychain
[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true
[psh]
  default = simple
[status]
  submoduleSummary = true
