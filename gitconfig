# You probably want to change the [user] section here since you are not me.

[hub]
  protocol = https
[user]
  name = Chris Sims
  email = chris@jcsi.ms
[alias]
  co = checkout
  count   = shortlog -sn
  standup = log --pretty=format:'%Cred%h%Creset - %C(yellow)%ae%Creset - %Cgreen%cd%Creset - %s%Creset' --abbrev-commit --date=local --author chris@jcsi.ms --since yesterday
  timelog = log --pretty=format:'%Cred%h%Creset - %C(yellow)%ae%Creset - %Cgreen%cd%Creset - %s%Creset' --abbrev-commit --date=local
  slog = log --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1
[credential]
  helper = osxkeychain
[psh]
  default = simple
[status]
  submoduleSummary = true
[diff]
  submodule = log
  compactionHeuristic = true
[rebase]
  autostash = true
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[interactive]
  diffFilter = diff-highlight
[magit]
  hideCampaign = true
